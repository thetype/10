-
	var verTag = "1.1.2"
	var viewport = "width=device-width"
		+ ",initial-scale=1.0"
		//- + ",maximum-scale=1.0"
		//- + ",minimum-scale=1.0"
	var pageDesc = "设计是推进社会变革的力量：2007—2017"
		+ "｜"
		+ "Type is Beautiful 是一个关于文字设计和视觉文化的媒体计划，"
		+ "我们关注的话题包括字体、排版、平面设计、公共设计、技术和视觉文化。"
	var pageKeyw = "Type is Beautiful,"
		+ "Chinese,Japanese,CJK,Western,Latin,Arabic,Mongolian,Devanagari,"
		+ "China,Japan,Taiwan,Hong Kong,Shanghai,London,Tokyo,"
		+ "typography,type,type design,graphic design,design,visual,culture,public,"
		+ "中文字体,西文字体,字体,文字设计,字体排印,排版,平面设计,公共设计,信息设计,设计,印刷,"
		+ "视觉,文化,历史,技术,"
		+ "评论,批评,翻译,原创,中文"

block var

head
	meta(charset="utf-8")
	title= pageTitl
	meta(name="title"       content=pageTitl)
	meta(name="description" content=pageDesc)
	meta(name="keywords"    content=pageKeyw)
	meta(name="viewport"    content=viewport)
	meta(name="format-detection" content="telephone=no")
	meta(name="apple-mobile-web-app-capable"          content="yes")
	meta(name="apple-mobile-web-app-status-bar-style" content="default")
	//- meta(name="apple-itunes-app" content="app-id=20170406")
	
	meta(http-equiv="X-UA-Compatible" content="IE=edge,chrome=1")
	
	link(rel="apple-touch-icon"                 href=`${assetsPath}assets/apple-touch-icon.png?v=${verTag}`)
	link(rel="apple-touch-icon" sizes="76x76"   href=`${assetsPath}assets/apple-touch-icon-76.png?v=${verTag}`)
	link(rel="apple-touch-icon" sizes="120x120" href=`${assetsPath}assets/apple-touch-icon-120.png?v=${verTag}`)
	link(rel="apple-touch-icon" sizes="152x152" href=`${assetsPath}assets/apple-touch-icon-152.png?v=${verTag}`)
	link(rel="apple-touch-icon" sizes="180x180" href=`${assetsPath}assets/apple-touch-icon-180.png?v=${verTag}`)
	link(rel="shortcut icon" href=`${assetsPath}assets/favicon.ico?v=${verTag}`)
	link(rel="stylesheet"    href=`${assetsPath}assets/app.css?v=${verTag}`)
	
	meta(property="og:url"          content=ogLink)
	meta(property="og:type"         content=ogType)
	meta(property="og:title"        content=ogTitl)
	meta(property="og:description"  content=ogDesc)
	meta(property="og:image"        content=ogImag)
	meta(name="twitter:card"        content=twCard)
	meta(name="twitter:site"        content=twUser)
	meta(name="twitter:creator"     content=twUser)
	meta(name="twitter:title"       content=ogTitl)
	meta(name="twitter:description" content=ogDesc)
	meta(name="twitter:image"       content=ogImag)
	
	block headScripts
		//- script(type="text/javascript" src=`${assetsPath}assets/vconsole.min.js?v=${verTag}`)
		script(type="text/javascript" src="https://use.typekit.net/vmj4ivh.js")
		script(type="text/javascript").
			try{Typekit.load({ async: true });}catch(e){}
